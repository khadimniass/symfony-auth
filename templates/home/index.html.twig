{% extends 'base.html.twig' %}

{% block title %} Bienvenue chez OFMS {% endblock %}

{% block body %}
    <h1>bienvenue chez OFMS</h1>

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.fichier,{'attr':{'style':'visibility:hidden'}}) }}
    <label for="home_fichier" class="btn btn-success">choose your file</label>
        <button type="submit" class="btn btn-info">Demarrer l'insertion</button>
    {{ form_end(registrationForm) }}
    <a href="login">connect</a>
    <a href="register">register</a>
{% endblock %}
