{% extends 'base.html.twig' %}
{% block title %}Register{% endblock %}
{% block body %}
    <h1>Register</h1>
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.prenom,{'attr':{'placeholder':"saisir le prenom", autofocus:'autofocus'}}) }}
        {{ form_row(registrationForm.nom,{'attr':{'placeholder':"saisir le nom"}}) }}
        {{ form_row(registrationForm.email,{'attr':{'placeholder':"saisir l'email"}}) }}
        {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
        <button type="submit" class="btn btn-success">Register</button>
    {{ form_end(registrationForm) }}
    <a href="login">veillez vous connecter</a>
{% endblock %}
